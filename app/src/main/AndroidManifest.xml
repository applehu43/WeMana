<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chaohu.wemana" >

    <!--original logo android:icon="@mipmap/ic_launcher"-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_test1"

        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!-- 定义Android应用的一个组件 -->
        <!--android:name=".WeManaActivity"-->
        <activity
            android:name=".activities.RecordWeightActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <!-- 指定该Activity是程序的入口-->
                <action android:name="android.intent.action.MAIN" />
                <!-- 指定加载该应用时运行该Activity-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.WeManaActivity">
        </activity>
    </application>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

</manifest>
