<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/record_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_view_size"
        android:collapseColumns="3">

        <TableRow
            android:id="@+id/record_weight_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/record_weight_show_data"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="@dimen/number_view_margin"
                android:layout_weight="1"
                android:background="@drawable/shape_round_corner"
                android:editable="false"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/number_view_text_size" />
            android:singleLine="true" />
        </TableRow>

        <TableRow
            android:id="@+id/record_weight_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <Button
                android:id="@+id/bt_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_save_reset"
                android:textSize="@dimen/text_button_view_size"
                android:text="Reset" />


            <Button
                android:id="@+id/bt_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="3" />

            <Button
                android:id="@+id/bt_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="7" />

        </TableRow>

        <TableRow
            android:id="@+id/record_weight_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_save_reset"
                android:textSize="@dimen/text_button_view_size"
                android:text="Save" />

            <Button
                android:id="@+id/bt_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="4" />


            <Button
                android:id="@+id/bt_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="8" />

        </TableRow>

        <TableRow
            android:id="@+id/record_weight_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="1" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="5" />


            <Button
                android:id="@+id/bt_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="9" />

        </TableRow>

        <TableRow
            android:id="@+id/record_weight_row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="2" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="6" />

            <Button
                android:id="@+id/bt_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_separator_line_width"
                android:layout_weight="1"
                android:background="@drawable/shape_numbers"
                android:textSize="@dimen/number_button_text_size"
                android:text="0" />
        </TableRow>

        <TableRow
            android:id="@+id/record_weight_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/number_view_margin"
            android:baselineAligned="false">

            <Button
                android:id="@+id/record_date_add"
                android:text="+"
                android:background="@drawable/shape_save_reset"
                android:textSize="@dimen/text_button_view_size"
                android:layout_width="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/record_date"
                android:editable="false"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/shape_round_corner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/record_date_sub"
                android:text="-"
                android:background="@drawable/shape_save_reset"
                android:textSize="@dimen/text_button_view_size"
                android:layout_width="0dp"
                android:layout_weight="1"/>
        </TableRow>

    </TableLayout>

</LinearLayout>
